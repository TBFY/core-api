PREFIX org: <http://www.w3.org/ns/org#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX tbfy: <https://theybuyforyou.eu/ontology/ocds/>
PREFIX dcterms: <http://purl.org/dc/terms/>
PREFIX schema: <http://schema.org/>
PREFIX dbp: <http://dbpedia.org/ontology/>
PREFIX regorg: <http://www.w3.org/ns/regorg#>
PREFIX bgh: <http://data.businessgraph.io/>
PREFIX locn: <http://www.w3.org/ns/locn#>
SELECT DISTINCT ( ?id as ?oid ) ?ln ?hn ?sad ?cp ?loc ?adc ?cpn ?eml ?tel ?jur ?fy ?nemp ?fullad
WHERE {
  ?id a tbfy:Organisation .
  OPTIONAL { ?id tbfy:legalName ?ln } .
  OPTIONAL { ?id tbfy:hasName ?hn } .
  ?id tbfy:hasAddress ?adr .
  OPTIONAL { ?adr schema:streetAddress ?sad } .
  OPTIONAL { ?adr schema:postalCode ?cp } .
  OPTIONAL { ?adr schema:addressLocality ?loc } .
  OPTIONAL { ?adr schema:addressCountry ?adc } .
  ?id tbfy:hasContactPoint ?hcp .
  OPTIONAL { ?hcp schema:name ?cpn } .
  OPTIONAL { ?hcp schema:email ?eml } .
  OPTIONAL { ?hcp schema:telephone ?tel } .
  ?id owl:sameAs ?ss .
  ?ss a regorg:RegisteredOrganization .
  OPTIONAL { ?ss dbp:jurisdiction ?jur} .
  OPTIONAL { ?ss bgh:foundingYear ?fy} .
  OPTIONAL { ?ss bgh:numberOfEmployees ?nemp} .
#  ?ss a locn:Address .
#  OPTIONAL { ?ss locn:fullAddress ?fullad} .
}
